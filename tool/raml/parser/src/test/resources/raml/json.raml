#%RAML 0.8
title: 易邦生物
baseUri: http://localhost:80/web
version: v0.1
mediaType: application/json

# 响应成功
traits:
  - resSuccess:
      responses:
        200:
          description: 成功
          body:
            application/json:
              schema: |
                {
                  "$schema": "http://json-schema.org/draft-04/schema#",
                  "id": "http://jsonschema.net",
                  "type": "object",
                  "properties": {
                    "code": {
                      "id": "http://jsonschema.net/code",
                      "type": "integer"
                    },
                    "msg": {
                      "id": "http://jsonschema.net/msg",
                      "type": "string"
                    }
                  },
                  "required": [
                    "code",
                    "msg"
                  ]
                }
              example: |
                {
                  "code" : 0,
                  "msg" : "成功"
                }

/api/query:
  displayName: response
  description: 响应
  
  /basic:
